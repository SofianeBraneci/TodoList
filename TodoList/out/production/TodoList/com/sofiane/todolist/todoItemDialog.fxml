<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<DialogPane fx:controller="com.sofiane.todolist.DialogController"
            xmlns:fx="http://javafx.com/fxml">

    <headerText>
        We could put instruction here
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="short description" GridPane.columnIndex="0" GridPane.rowIndex="0"></Label>
            <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
            <Label text="Details" GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
            <TextArea fx:id="details" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextArea>
            <Label text="Deadline" GridPane.columnIndex="0" GridPane.rowIndex="2"></Label>
            <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>
        </GridPane>
    </content>
</DialogPane>
